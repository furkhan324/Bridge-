<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bnight"
    android:id="@+id/splash2">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/imageView12"
        android:layout_alignParentTop="true"

        android:src="@drawable/bridgelogowhite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login2"
        android:src="@drawable/button"
        android:layout_below="@+id/line2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:textColorHint="#fff"
android:password="true"
        android:id="@+id/username"
        android:layout_below="@+id/imageView12"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:background="#00ffffff"
        android:layout_marginTop="50dp" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/line1"
        android:src="@drawable/line"
 android:scaleType="fitXY"
        android:layout_marginLeft="-3dp"
        android:layout_below="@+id/username"
        android:layout_alignStart="@+id/user" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/user"
        android:src="@drawable/user4"
        android:layout_alignTop="@+id/username"
        android:layout_toStartOf="@+id/username"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Password"
        android:ems="10"
android:password="true"
        android:textColorHint="#fff"
        android:id="@+id/password"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:background="#00ffffff"
        android:layout_marginTop="35dp" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/line2"
        android:src="@drawable/line"
        android:scaleType="fitXY"
        android:layout_marginLeft="-3dp"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/key" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/key"
        android:src="@drawable/key4"
        android:layout_alignTop="@+id/password"
        android:layout_toStartOf="@+id/password"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login"
        android:layout_alignBottom="@+id/login2"
        android:layout_alignStart="@+id/login2"
        android:textColor="#fff"
        android:layout_marginLeft="37dp"
        android:layout_marginBottom="28dp"
        android:textIsSelectable="false"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Don&apos;t have an account? Sign Up instead!"
        android:id="@+id/signup"
        android:layout_below="@+id/login2"
        android:layout_centerHorizontal="true"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bridge your local meetups, celebrations, and opportunities today..."
        android:id="@+id/sublogo"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_alignBottom="@+id/imageView12"
        android:layout_centerHorizontal="true" />


</RelativeLayout>